{
  "name": "shedevr",
  "type": "module",
  "version": "1.0.0",
  "description": "I am just ask AI searcher: \"right configuration for development workplase with bun, astro, typescript, obsidian, cloudflare\" for fun...",
  "keywords": ["ubuntu", "vanilla", "tailwind", "astro"],
  "author": "Hrihorii Ilin <devopsick@pm.me>",
  "license": "MIT",
  "repository": "https://github.com/Frikadellios/shedevr",
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@types/bun": "latest",
    "@types/html": "^1.0.4",
    "@types/node": "^22.4.1",
    "@types/web": "^0.0.155"
  },
  "peerDependencies": {
    "typescript": "^5.0.0",
    "@tailwindcss/cli": "^4.0.0-alpha.19"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.3",
    "@astrojs/react": "^3.6.2",
    "@astrojs/ts-plugin": "^1.10.1",
    "@fontsource/ubuntu": "^5.0.14",
    "@tailwindcss/postcss": "^4.0.0-alpha.19",
    "@tailwindcss/vite": "^4.0.0-alpha.19",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "@vanilla-extract/css": "^1.15.4",
    "@vanilla-extract/vite-plugin": "^4.0.14",
    "astro": "^4.14.3",
    "bun-types": "^1.1.24",
    "caniuse-lite": "^1.0.30001651",
    "class-variance-authority": "^0.7.0",
    "editorconfig-checker": "^5.1.8",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "sass": "^1.77.8",
    "tailwind-merge": "^2.5.2",
    "tailwindcss": "^4.0.0-alpha.19",
    "typescript": "^5.5.4",
    "undici-types": "^5.28.4",
    "vanilla-framework": "^4.15.0"
  },
  "scripts": {
    "editorconfig": "editorconfig-checker -exclude \"**/node_modules/**\"",
    "browserslist:update": "bunx update-browserslist-db@latest",
    "dev": "bunx --bun astro dev",
    "start": "bun astro check --verbose && bunx --bun astro dev --verbose",
    "checker": "conc bun:check:*",
    "build": "bun astro check --verbose && bunx --bun astro build --verbose",
    "preview": "bunx --bun astro preview",
    "astro": "astro",
    "deploy": "bunx --bun astro build && bun wrangler pages deploy ./dist",
    "check:astro": "bun astro check --verbose",
    "check:format": "bunx @biomejs/biome format . --write",
    "format": "biome format . --write",
    "lint": "biome lint .",
    "lint:fix": "biome lint . --apply",
    "lint:fix:unsafe": "biome lint . --apply-unsafe",
    "biomes": "bunx @biomejs/biome check --write .",
    "biomes:fix": "bunx @biomejs/biome check --fix --unsafe .",
    "tailwind:cli": "bunx @tailwindcss/cli@next -i ./src/styles/globals.css -o ./src/styles/dist/globals.css"
  },
  "trustedDependencies": ["@biomejs/biome"]
}
